@model LifeCare.ViewModels.AdminUsers.AdminUserDetailsVM
@{
    ViewData["Title"] = "Delete user";
}
<div class="container py-4 admin-users">
    <h2 class="mb-3 text-danger">Delete user</h2>
    <div class="alert alert-warning">This will permanently delete the user and all their data.</div>
    <div class="card mb-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Display name</dt>
                <dd class="col-sm-9">@Model.DisplayName</dd>
                <dt class="col-sm-3">Admin</dt>
                <dd class="col-sm-9">@((Model.IsAdmin) ? "Yes" : "No")</dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="d-flex gap-2">
            <button class="btn btn-danger" type="submit">Delete</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/admin.users.css" asp-append-version="true" />
}
