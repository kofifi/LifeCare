@model LifeCare.ViewModels.AdminUsers.AdminUserDetailsVM
@{
    ViewData["Title"] = "User details";
}
<div class="container py-4 admin-users">
    <h2 class="mb-3">User details</h2>
    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Display name</dt>
                <dd class="col-sm-9">@Model.DisplayName</dd>

                <dt class="col-sm-3">Admin</dt>
                <dd class="col-sm-9">@((Model.IsAdmin) ? "Yes" : "No")</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/admin.users.css" asp-append-version="true" />
}
