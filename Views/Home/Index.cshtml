@model LifeCare.ViewModels.HomeDashboardVM
@{
    ViewData["Title"] = "Dashboard";
}

<section class="dashboard container py-4">
    <h2 class="mb-4 text-center">Dashboard</h2>
    <div class="table-responsive">
        <table class="table table-sm table-hover dashboard-table">
            <thead>
                <tr>
                    <th scope="col">Metric</th>
                    <th scope="col">Count</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Users</td>
                    <td>@Model.UsersCount</td>
                </tr>
                <tr>
                    <td>Habits</td>
                    <td>@Model.HabitsCount</td>
                </tr>
                <tr>
                    <td>Categories</td>
                    <td>@Model.CategoriesCount</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
