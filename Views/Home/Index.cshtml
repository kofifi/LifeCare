@model LifeCare.ViewModels.HomeDashboardVM
@{
    ViewData["Title"] = "Dashboard";
}

<section class="dashboard container py-4">
    <h2 class="mb-4 text-center">Dashboard</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4 text-center">
        <div class="col">
            <div class="stat-card p-3 h-100">
                <h5>Users</h5>
                <p class="stat-value">@Model.UsersCount</p>
            </div>
        </div>
        <div class="col">
            <div class="stat-card p-3 h-100">
                <h5>Habits</h5>
                <p class="stat-value">@Model.HabitsCount</p>
            </div>
        </div>
        <div class="col">
            <div class="stat-card p-3 h-100">
                <h5>Categories</h5>
                <p class="stat-value">@Model.CategoriesCount</p>
            </div>
        </div>
    </div>
    <section class="news mt-5 text-center">
        <h3 class="mb-3">Latest Updates</h3>
        <a class="btn btn-outline-primary" href="/News">View recent commits</a>
    </section>
</section>
